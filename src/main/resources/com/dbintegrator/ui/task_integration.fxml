<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.dbintegrator.controller.TaskIntegrationController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <HBox spacing="20" alignment="CENTER_LEFT">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="P6 Project:" />
            <ComboBox fx:id="sourceProjectComboBox"
                      maxWidth="Infinity"
                      visibleRowCount="5"
                      promptText="Select P6 Project"/>
            <ListView fx:id="sourceTasksListView" VBox.vgrow="ALWAYS" />
        </VBox>

        <VBox spacing="10" alignment="CENTER">
            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="addTaskMappingButton" text="Add Mapping â†’" />
            <Button fx:id="removeTaskMappingButton" text="Remove Mapping" />
            <Region VBox.vgrow="ALWAYS" />
        </VBox>

        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="EBS Project:" />
            <ComboBox fx:id="destProjectComboBox"
                      maxWidth="Infinity"
                      visibleRowCount="5"
                      promptText="Select EBS Project"/>
            <ListView fx:id="destTasksListView" VBox.vgrow="ALWAYS" />
        </VBox>
    </HBox>

    <VBox spacing="5">
        <Label text="Task Mappings:" />
        <ListView fx:id="taskMappingsListView" VBox.vgrow="ALWAYS" />
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="executeTaskIntegrationButton" text="Execute Task Integration"
                    style="-fx-background-color: #CCFFCC;"/>
        </HBox>
    </VBox>
</VBox>