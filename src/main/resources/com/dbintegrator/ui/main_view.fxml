<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700" prefWidth="900" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dbintegrator.controller.MainController">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>

            <HBox spacing="20" alignment="CENTER_LEFT">
                <Label text="Oracle Database Integration Tool" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            </HBox>

            <HBox spacing="20" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label fx:id="sourceDbLabel" text="Source: Not connected" />
                    <Button fx:id="connectSourceButton" text="Connect to Source DB" />
                </VBox>

                <VBox spacing="5">
                    <Label fx:id="destDbLabel" text="Destination: Not connected" />
                    <Button fx:id="connectDestButton" text="Connect to Destination DB" />
                </VBox>

                <VBox spacing="5" alignment="CENTER" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 5;">
                    <Label text="Testing Tools" style="-fx-font-weight: bold;"/>
                    <HBox spacing="10">
                        <Button fx:id="testModeButton" text="Enable Test Mode" style="-fx-background-color: lightgreen;"/>
                        <Button fx:id="openH2ConsoleButton" text="Open H2 Console" style="-fx-background-color: lightblue;"/>
                    </HBox>
                </VBox>
            </HBox>

            <HBox spacing="20" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label fx:id="sourceProjectsLabel" text="No source projects selected" />
                    <Button fx:id="selectSourceProjectsButton" text="Select Source Projects" />
                </VBox>

                <VBox spacing="5">
                    <Label fx:id="destProjectsLabel" text="No destination projects selected" />
                    <Button fx:id="selectDestProjectsButton" text="Select Destination Projects" />
                </VBox>
            </HBox>

            <HBox spacing="20" alignment="CENTER_LEFT">
                <Label text="Integration Direction:" />
                <RadioButton fx:id="sourceToDestRadio" text="Source → Destination" />
                <RadioButton fx:id="destToSourceRadio" text="Destination → Source" />
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.6" orientation="VERTICAL">
            <VBox>
                <HBox spacing="10" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10" />
                    </padding>

                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Source Table:" />
                        <ComboBox fx:id="sourceTableComboBox" maxWidth="Infinity" />
                        <Label text="Columns:" />
                        <ListView fx:id="sourceColumnsListView" VBox.vgrow="ALWAYS" />
                    </VBox>

                    <VBox spacing="10" alignment="CENTER">
                        <Region VBox.vgrow="ALWAYS" />
                        <Button fx:id="addMappingButton" text="Add Mapping →" />
                        <Button fx:id="removeMappingButton" text="Remove Mapping" />
                        <Region VBox.vgrow="ALWAYS" />
                    </VBox>

                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Destination Table:" />
                        <ComboBox fx:id="destTableComboBox" maxWidth="Infinity" />
                        <Label text="Columns:" />
                        <ListView fx:id="destColumnsListView" VBox.vgrow="ALWAYS" />
                    </VBox>
                </HBox>
            </VBox>

            <VBox spacing="5">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10" />
                </padding>
                <Label text="Field Mappings:" />
                <ListView fx:id="mappingsListView" VBox.vgrow="ALWAYS" />
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <padding>
                        <Insets top="10" />
                    </padding>
                    <Button fx:id="verifyResultsButton" text="Verify Results" style="-fx-background-color: #FFCC99;"/>
                    <Button fx:id="executeButton" text="Execute Integration" style="-fx-background-color: #CCFFCC;"/>
                </HBox>
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <VBox spacing="5">
            <padding>
                <Insets top="5" right="10" bottom="10" left="10" />
            </padding>
            <Label text="Log:" />
            <TextArea fx:id="logTextArea" prefHeight="120" editable="false" wrapText="true" />
        </VBox>
    </bottom>
</BorderPane>